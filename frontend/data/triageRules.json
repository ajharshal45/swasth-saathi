{
  "rules": [
    {
      "id": "severe_symptoms",
      "when": { "severity": "severe" },
      "level": "HIGH",
      "en": "Severe symptoms detected.",
      "hi": "गंभीर लक्षण पाए गए हैं।"
    },

    {
      "id": "elderly_high_risk",
      "when": { "ageGroup": "above60", "severity": "moderate" },
      "level": "HIGH",
      "en": "Elderly person with concerning symptoms.",
      "hi": "बुज़ुर्ग व्यक्ति में चिंताजनक लक्षण हैं।"
    },

    {
      "id": "child_with_symptoms",
      "when": { "ageGroup": "below18", "durationIn": ["3-5", "more5"] },
      "level": "HIGH",
      "en": "Child with persistent symptoms needs attention.",
      "hi": "बच्चे में लंबे समय से लक्षण हैं।"
    },

    {
      "id": "medicine_not_working",
      "when": { "medicineTaken": "taken", "severityNot": "mild" },
      "level": "MEDIUM",
      "en": "Symptoms not improving despite medicine.",
      "hi": "दवा लेने के बाद भी लक्षण ठीक नहीं हो रहे हैं।"
    },

    {
      "id": "long_duration",
      "when": { "durationIn": ["3-5", "more5"] },
      "level": "MEDIUM",
      "en": "Symptoms lasting several days.",
      "hi": "कई दिनों से लक्षण हैं।"
    },

    {
      "id": "multiple_symptoms",
      "when": { "minSymptoms": 4 },
      "level": "MEDIUM",
      "en": "Multiple symptoms detected.",
      "hi": "कई लक्षण पाए गए हैं।"
    }
  ],

  "default": {
    "level": "LOW",
    "en": "Symptoms appear mild.",
    "hi": "लक्षण हल्के हैं।"
  }
}
